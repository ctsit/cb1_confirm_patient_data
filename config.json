{
    "name": "CBC Confirm Patient Data",
    "description": "Display data from another project",
    "namespace": "CBC\\ExternalModule",
    "framework-version": 4,
    "redcap-version-min": "9.7.8",
    "permissions": [
        "redcap_data_entry_form_top",
        "redcap_every_page_top"
    ],
    "authors": [
        {
            "name": "University of Florida CTS-IT",
            "email": "CTSIT-REDCAP-MODULE-SUPPO@LISTS.UFL.EDU",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Michael Bentz",
            "email": "mbentz@ufl.edu",
            "institution": "University of Florida - CTSI"
        }
    ],
    "project-settings": [
        {
            "key": "target_pid",
            "name": "Project you wish to search",
            "type": "project-id",
            "required": true,
            "autocomplete": true
        },
        {
            "key": "codebook_shortcuts",
            "name": "Codebook shortcuts",
            "type": "descriptive"
        },
        {
            "key": "enabled_form",
            "name": "Enabled Form",
            "type": "sub_settings",
            "repeatable": false,
            "sub_settings": [
                {
                    "key": "show_on_form",
                    "name": "Show in this form",
                    "type": "form-list",
                    "required": true,
                    "autocomplete": true
                },
                {
                    "key": "adc_subject_id",
                    "name": "ADC Subject ID (ptid) field",
                    "type": "field-list",
                    "required": true,
                    "repeatable": false,
                    "autocomplete": true
                },
                {
                    "key": "mapping",
                    "name": "JSON array of fields from source project",
                    "required": true,
                    "type": "textarea",
                    "autocomplete": true
                }
            ]
        }
    ]
}
